{
  "name": "verboo",
  "productName": "Verboo",
  "description": "Verboo - Video Learning Assistant",
  "author": {
    "name": "ooAKLoo",
    "email": "ooakloo@users.noreply.github.com"
  },
  "private": true,
  "version": "0.3.1",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"npm run electron:wait\"",
    "electron:wait": "wait-on tcp:5173 && npm run electron:build && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "electron:build": "tsc -p electron/tsconfig.json",
    "build": "tsc -b && vite build && npm run electron:build",
    "lint": "eslint .",
    "preview": "vite preview",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "release": "npm run build && electron-builder --publish always",
    "release:publish": "./scripts/release.sh"
  },
  "dependencies": {
    "@ooakloowj/orbit": "^0.1.0",
    "@types/react-window": "^1.8.8",
    "better-sqlite3": "^12.5.0",
    "electron-log": "^5.2.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.3.9",
    "lucide-react": "^0.562.0",
    "node-fetch": "^3.3.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-window": "^2.2.3",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.4",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  }
}