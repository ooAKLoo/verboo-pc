  "interactions": [
    {
      "id": "quick-capture",
      "name": "Quick Screenshot",
      "screen": "main-browser",
      "trigger": { "type": "keyboard", "key": "\u2318S" },
      "steps": [
        { "action": "capture-video-frame", "description": "Capture current video frame via WCV" },
        { "action": "save-to-database", "description": "Save screenshot with timestamp and subtitle data" },
        { "action": "toast", "content": "Saved to screenshot library", "icon": "Camera", "type": "screenshot", "position": "top", "duration": "2s" },
        { "action": "refresh-material-list", "target": "info-panel.tabs.asset" }
      ]
    },
    {
      "id": "mark-important",
      "name": "Mark as Important",
      "screen": "main-browser",
      "trigger": { "type": "keyboard", "key": "\u2318I" },
      "steps": [
        { "action": "capture-video-frame" },
        { "action": "save-with-mark", "markType": "important" },
        { "action": "toast", "content": "Marked as important", "icon": "Camera", "type": "screenshot", "position": "top", "duration": "2s" },
        { "action": "subtitle-highlight", "borderColor": "#f59e0b", "bgColor": "amber-50/70" }
      ]
    },
    {
      "id": "mark-difficult",
      "name": "Mark as Difficult",
      "screen": "main-browser",
      "trigger": { "type": "keyboard", "key": "\u2318D" },
      "steps": [
        { "action": "capture-video-frame" },
        { "action": "save-with-mark", "markType": "difficult" },
        { "action": "toast", "content": "Marked as difficult", "icon": "Camera", "type": "screenshot", "position": "top", "duration": "2s" },
        { "action": "subtitle-highlight", "borderColor": "#ef4444", "bgColor": "red-50/70" }
      ]
    },
    {
      "id": "navigate-url",
      "name": "Navigate to URL",
      "screen": "welcome",
      "trigger": { "type": "form-submit", "target": "search-input" },
      "steps": [
        { "action": "welcome-exit-animation", "duration": "700ms", "easing": "ease-out", "scale": "0.98", "opacity": 0 },
        { "action": "expand-sidebar", "duration": "300ms" },
        { "action": "expand-right-panel", "duration": "300ms" },
        { "action": "show-browser-view", "loadUrl": true },
        { "action": "update-nav-toolbar", "showUrl": true }
      ]
    },
    {
      "id": "switch-to-assets",
      "name": "Open Asset Library",
      "screen": "main-browser",
      "trigger": { "type": "click", "target": "sidebar.nav-items.assets" },
      "steps": [
        { "action": "pause-video" },
        { "action": "hide-wcv", "description": "Hide WebContentsView" },
        { "action": "switch-view", "mode": "asset" },
        { "action": "show-full-panel", "panel": "asset-library", "animation": "fade-in" }
      ]
    },
    {
      "id": "subtitle-seek",
      "name": "Click Subtitle to Seek",
      "screen": "main-browser",
      "trigger": { "type": "click", "target": "info-panel.subtitle-list.item" },
      "steps": [
        { "action": "seek-video", "time": "subtitle.start" },
        { "action": "highlight-subtitle", "target": "clicked-item", "bg": "#fafafa" }
      ]
    },
    {
      "id": "get-subtitles",
      "name": "Auto-fetch Subtitles",
      "screen": "main-browser",
      "trigger": { "type": "click", "target": "sidebar.get-subtitles" },
      "steps": [
        { "action": "pause-video" },
        { "action": "open-dialog", "dialog": "subtitle-dialog" },
        { "action": "detect-platform", "platforms": ["youtube", "bilibili"] },
        { "action": "fetch-subtitles", "showLoader": true },
        { "action": "toast", "content": "Subtitles loaded", "type": "success" },
        { "action": "close-dialog" },
        { "action": "populate-subtitle-list" }
      ]
    }
  ],

